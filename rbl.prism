formula reward_unseen_speed_pf_2 = (OFC2toDRN = 10?40:(OFC2toDRN = 30?20:(OFC2toDRN = 90?10:(OFC2toDRN = 200?5:0))));
formula reward_unseen_speed_pf_3 = (OFC3toDRN = 10?40:(OFC3toDRN = 30?20:(OFC3toDRN = 90?10:(OFC3toDRN = 200?5:0))));






